import java.util.Scanner;

public class ReverseNum
{
public static void main (String args[])
{
int n, rev=0, rem;
Scanner scan = new Scanner(System.in);
System.out.println("Enter a number:");
n = scan.nextInt();
while(n!=0)
{
rem = n%10;
rev = rev*10+rem;
n = n/10;
}
System.out.println("Reversed number is: " +rev);
}
}
