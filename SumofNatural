import java.util.Scanner;

public class SumofNatural 
{
    public static void main(String args[])
    {
        int n, i = 1 ;
        int sum = 0;
        Scanner scan = new Scanner(System.in);
        System.out.println("Enter a Number :");
        n = scan.nextInt();
        for(i=1;i<=n;i++)
   {
        sum=sum+i;
    }

        System.out.println("Sum of "+n+" numbers is :"+sum);
    } 
}
